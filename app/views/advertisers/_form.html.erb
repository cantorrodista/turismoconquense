<% use_tinymce -%>



        <%= f.error_messages %>
        <fieldset>
            <p>
              <%= f.label :name, t('activerecord.attributes.advertiser.name') %>
              <%= f.text_field :name %>
            </p>
            <p>
              <%= f.label :url, t('activerecord.attributes.advertiser.url') %>
              <%= f.text_field :url %>
            </p>
            <p>
              <%= f.label :description, t('activerecord.attributes.advertiser.description') %>
              <%= f.text_area :description, :rows => "12", :cols => "20" %>
            </p>

            <p>
            <span id="logo">
				<% unless advertiser.new_record? %>
					<%= image_tag advertiser.logo(:big) if advertiser.logo%>
				<% end %>
			</span>
			<%= f.label :logo, t('activerecord.attributes.advertiser.logo') %>
            <%= f.file_field :logo%></p>





        <%= f.submit t('app.advertiser.create.link_to') %>

