<div class="comments_box degr_box border_box">            
  
	<% collection = Settings.comments.activate_moderation == 1 ? resource.comments.published : resource.comments%>
  <h4><%= collection.size %> comentarios <span><a href="<%=resource_path(resource)%>#new_comment">Â¡Deja el tuyo!</a></span></h4>   
  

  
	
  <ul>	
	
    <% collection.each do |comment| %>
    <li id="<%= dom_id(comment) %>">
	    <img src="images/anonimus_avatar.jpg" width="32" height="32" alt="Avatar Medium" />
    
        <div class="comments">
        
          <h5><strong>
             <% if comment.uri? %>
                <%= link_to clean_text(comment.author_name), comment.uri, { :rel => 'nofollow' } %>
             <% else %>
                <%= clean_text(comment.author_name) %>
             <% end %>
             </strong></h5>
          <p><%= clean_text(comment.message) %></p>
        </div><!-- .comments -->
    </li>
    <% end %>
  </ul><!-- .comments -->
  <div id="new_comment" class="comment_form">
    <h4>Deja tu comentario:</h4>
    <%= render :partial => 'comments/form' %>
  </div><!-- #new_comment .comment_form -->
</div><!-- .comments_box -->
              
